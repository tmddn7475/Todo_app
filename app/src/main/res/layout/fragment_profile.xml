<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complete"
        android:gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingHorizontal="18dp">

                <ImageView
                    android:id="@+id/chart_date_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@+id/chart_date"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_chevron_left_24" />

                <TextView
                    android:id="@+id/chart_date"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@+id/chart_date_img2"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/chart_date_img2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/image"
                    android:src="@drawable/baseline_chevron_right_24" />

            </RelativeLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_add_todo"
                android:padding="12dp"
                android:text="@string/add_todo"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_edit_24" />

            <View
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/profile_priority"
                android:padding="12dp"
                android:text="@string/double_check"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_priority_high_24" />

            <View
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/profile_donate"
                android:padding="12dp"
                android:text="@string/donate"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_favorite_24" />

            <View
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/profile_faq"
                android:padding="12dp"
                android:text="@string/faq"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_question_answer_24" />

            <View
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/profile_share"
                android:padding="12dp"
                android:text="@string/share_app"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_share_24" />

            <View
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/profile_setting"
                android:padding="12dp"
                android:text="@string/setting"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableLeftCompat="@drawable/baseline_settings_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>